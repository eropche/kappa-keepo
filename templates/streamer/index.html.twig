{% extends 'base.html.twig' %}

{% block title %}Streamer index{% endblock %}

{% block body %}
    <h1>Streamer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nickname</th>
                <th>Text</th>
                <th>Fotos</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for streamer in streamers %}
            <tr>
                <td>{{ streamer.id }}</td>
                <td>{{ streamer.nickname }}</td>
                <td>{{ streamer.text }}</td>
                <td>{{ streamer.fotos ? streamer.fotos|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('streamer_show', {'id': streamer.id}) }}">show</a>
                    <a href="{{ path('streamer_edit', {'id': streamer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('streamer_new') }}">Create new</a>
{% endblock %}
